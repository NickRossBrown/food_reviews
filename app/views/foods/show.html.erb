<% content_for(:title, "Food-Show") %>
<h1><%= @food.name %></h1>

<% if @food.reviews.any? %>
  <h4>Here are the reviews for this food:</h4>
          <button class="btn btn-success"><%= link_to "Edit", edit_food_review_path(@food, review)%>
          </button>
          <button class="btn btn-danger"><%= link_to "Delete", food_review_path(@food, review),
                                                            :data => {:confirm => "Are you sure?",
                                                            :method => "delete"} %>
          </button>
<% end %>


<button class="btn btn-info"><p><%= link_to "Return to foods", foods_path %></p></button>
